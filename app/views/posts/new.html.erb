<div class="container">
  <h2> Digite o conte√∫do do post: </h2>
  <%= form_for(@post) do |f| %>
    <div class="col-xs-3 col-sm-3">
      <div class="row">
        <div class="form-group">
          <%= f.label :Titulo %>
          <%= f.text_field :title, class: 'form-control' %>
